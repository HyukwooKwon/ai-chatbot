{
    "version": 2,
    "builds": [
        {
            "src": "app.py",  
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",  
            "use": "@vercel/static-build"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",  
            "dest": "frontend/index.html"
        },
        {
            "src": "/chat",  
            "dest": "app.py"
        },
        { "src": "/naver_talktalk_webhook", "dest": "app.py" }
    ]
}